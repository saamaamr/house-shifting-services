<%- include("../template/header"); -%>
<%- include ('../template/nav') -%>
  <!-- from section -->
  <section class="contact_section layout_padding">
    <div class="container">
      <div class="row">
        <div class="col-md-11 col-lg-9 mx-auto">
          <div class="map_form_container">
            <div class="form_container">
              <div class="heading_container heading_center">
                <h2 class="contact_heading">
                  Book <span>Service</span>
                </h2>
              </div>
              <form action="/bookingservice" method="post" enctype="multipart/form-data">
                <h5 class="contact_heading">
                  Contract
                </h5>
                <div class="form-row">
                  <input type="text" class="form-control" name="uId" placeholder="user_id" value="<%=userData[0].u_id%>"
                    hidden />
                  <div class="form-group col-md-6">
                    <input type="email" class="form-control" name="userEmail" placeholder="User Email Address"
                      value="<%=userData[0].email%>" />
                  </div>
                  <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="userPhone" placeholder="User Mobile Number"
                      value="<%=userData[0].phone%>" />
                  </div>
                </div>

                <h5 class="contact_heading">
                  Current address
                </h5>
                <div class="form-group ">
                  <input type="text" class="message-box" placeholder="Current address....." name="currentAddress"
                    value="<%=userData[0].house%>, road: <%=userData[0].road%>, division: <%=userData[0].division%>, district: <%=userData[0].zila%>, thana/upazila: <%=userData[0].upazila%>" />
                </div>

                <h5 class="contact_heading">
                  Destination address
                </h5>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <input type="text" class="form-control" placeholder="House" name="desHouse" />
                  </div>
                  <div class="form-group col-md-6">
                    <input type="text" class="form-control" placeholder="Road" name="desRoad" />
                  </div>
                </div>

                <div class="form-row">
                  <div class="form-group col-md-6">
                    <select class="form-select divisions" name="desDivision" id="division"
                      aria-label="Default select example">
                      <option selected>Select Division:</option>
                    </select>
                  </div>

                  <div class="form-group col-md-6">
                    <select class="form-select districts" name="desZila" id="districts"
                      aria-label="Default select example">
                      <option selected>Select Zila:</option>
                    </select>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <input type="text" class="form-control" placeholder="Upazila/Thana" name="desUpazila" />
                  </div>
                </div>
                <h5 class="contact_heading">
                  Service info
                </h5>
                <div class="form-row">
                  <input type="text" class="form-control" name="serId" placeholder="Service Id"
                    value="<%=serData[0].ser_id%>" hidden />
                  <div class="form-group col-md-4">
                    <label for="">Title</label>
                    <input type="text" class="form-control" name="serTitle" placeholder="Service title"
                      value="<%=serData[0].stitle%>" />
                  </div>
                  <div class="form-group col-md-4">
                    <label for="">Price</label>
                    <input type="text" class="form-control" name="serPrice" placeholder="price"
                      value="<%=serData[0].price%>" />
                  </div>
                  <div class="form-group col-md-4">
                    <label for="">Service Date</label>
                    <input type="date" class="form-control" name="serDate" placeholder="date"
                      value="<%=serData[0].price%>" />
                  </div>
                </div>
                serDate
                <h5 class="contact_heading">
                  Payment Method
                </h5>
                <div class="form-row">
                  <div class="form-group col-md-2">
                    <input type="checkbox" id="online-payment" name="paymentMathod" value="online"
                      onclick="showAdditionalFields()">
                  </div>
                  <div class="form-group col-md-4">
                    Online Payment (bKash)
                  </div>
                  <div class="form-group col-md-2">
                    <input type="checkbox" id="cash-on-delivery" name="paymentMathod" value="cash"
                      onclick="showAdditionalFields()">
                  </div>
                  <div class="form-group col-md-4">
                    Cash on delivery
                  </div>
                </div>

                <div class="form-row">
                  <div id="additional-fields" style="display:none;" class="form-group col-md-6">
                    <label for="proof-of-payment">Transaction Screenshot</label>
                    <input type="file" id="proof-of-payment" name="paymentProof" accept="image/*">
                  </div>
                </div>
                <div class="btn-box">
                  <button type="submit" class="submit_btn">
                    Purchase
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>
  <!-- end from section -->

  <%- include("../template/lfooter"); -%>

    <script src="/js/signup.js"></script>
    <script>
      function showAdditionalFields() {
        var cashOnDelivery = document.getElementById("cash-on-delivery");
        var onlinePayment = document.getElementById("online-payment");
        var additionalFields = document.getElementById("additional-fields");
        if (cashOnDelivery.checked == true) {
          additionalFields.style.display = "none";
        } else if (onlinePayment.checked == true) {
          additionalFields.style.display = "block";
        }
      }

    </script>